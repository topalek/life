.icon
  display: inline-block
  margin-right: 5px
  max-width: 20px
  max-height: 20px
  img
    width: 100%
    height auto
    vertical-align: middle

#header_top
  background-color: #e6e6e6
  line-height: 30px

.header_email, .header_phone
  margin: 0 10px
  a
    color: #333

#header_nav
  background: #5b453d url("/img/header-pattern.png") repeat-x
  color #f8e8d8
  height: 60px
  font-size: 16px
  border-bottom: 1px solid #e1e1e1;

.nav-container
  position: relative
.header_search
  position: absolute
  visibility hidden
  top: 0
  right: 0
  width: 7%
  height: 100%
  transition all .3s ease-in
  &.active
    width: 82%
    visibility visible
.form-search
  width: 100%
  height: 100%
  padding: 9px 0
  position relative
  #close-search
    position: absolute
    right: 10px
    top 10px
    padding: 4px;
    font-size: 22px;
    cursor: pointer;
    color: #5b453d;
.input-search
  float left
  width: 100%
  height: 100%
  border none
  outline none
  border-radius:7px
  padding 5px 20px
  padding-left: 50px
button.input-submit
  color main-color
  position: absolute
  font-size 22px
  left: 0
  height: 41px
  width: 41px
  z-index: 1
  background: #fff
  border none
  outline none
  border-radius:7px
  &:acive,&:focus
    border none
    outline none

.nav-item
  float: left
  margin: 0 15px

.logo
  margin-top: 8px
  display: inline-block
  & >div
    color: l_color

.logo_header
  text-transform: uppercase
  font-family NeoSansProBold, Tahoma, Arial, sans-serif

.search_triger
  cursor: pointer;
  padding: 8px;
  margin-top: 8px;
  font-size 22px


ul.link_group
  overflow: hidden;
  margin-top: 9px;
  li
    float: left;
    font-size: 16px;
    .link
      border: 1px solid #f5e7d7
      border-right: none
      padding: 10px;
      display: inline-block
      color: l_color
      transition all .2s ease-in-out
      background-color: transparent
      &:hover
        background-color: rgba(47, 30, 25, 0.43)
      &.active
        background-color: accent-color
    &:last-child
      .link
        border-right: 1px solid l_color
        border-radius 0 7px 7px 0
    &:first-child
      .link
        border-radius 7px 0 0 7px

.nav
  li
    display: block
    float: left
    a
      display: inline-block
      line-height: 59px
      text-transform: capitalize
      padding: 0 10px
      transition all .2s ease-in-out
      background-color: transparent
      color: l_color
      &.active
        color: #fff
        font-weight: bold
      &:hover
        background-color: rgba(47, 30, 25, 0.43)

