.page_title
  width: 75%
  margin: 0 auto
  position: relative
  z-index: 1
  top: 50%
  transform translateY(-50%)
  color #fff
  .title
    font-family: NeoSansProBold, Tahoma, Arial, sans-serif;
    font-size: 45px
    text-shadow: 0 0 10px rgba(0, 0, 0, 0.55)
  .description
    font-size: 18px
    -webkit-font-smoothing: antialiased;
    margin-bottom: 60px;
    text-shadow: 0 0 6px rgba(0, 0, 0, 0.55)
  .slogan
    font-family: NeoSansProRegular, Tahoma, Arial, sans-serif
    font-size: 42px

.bnt-container
  max-width: 85%
  margin: 30px auto

a.my-btn
  padding: 20px 25px
  display: inline-block
  text-align: center
  font-size: 16px
  font-family: NeoSansProRegular, Tahoma, Arial, sans-serif
  font-weight: bold
  background: accent-color
  background: linear-gradient(to bottom, #ff5859 0%, #d43334 100%)
  box-shadow 0 7px 13px rgba(0, 0, 0, .4), 0 6px 0 rgba(0, 0, 0, .4)
  border-radius: 5px
  transition all .2s ease-in-out
  color: #fff
  &.simple
    color: #fff
    width: 100%;
    background: accent-color;
    padding: 15px 20px;
    &:hover,
    &:focus,
    &:active
      background: darken(accent-color,15%);
  &.ghost
    width: 100%;
    color: accent-color;
    background: transparent;
    border: 1px solid accent-color
    box-shadow: none;
    padding: 25px 20px;
    &:hover,
    &:focus,
    &:active
      background: transparent;
      color: darken(accent-color,15%)
      border: 1px solid darken(accent-color,15%)
    &.active
      color #fff
      background: accent-color;
  &:hover,
  &:active
    background: linear-gradient(to bottom, #d43334 0%, #d43334 100%)
    color #fff
  &:focus
    color #fff
.sep
  height: 4px
  width: 170px
  background-color: accent-color
  display: inline-block
  margin: 15px 0 25px
  border-radius: 3px

section
  background #fff
  padding: 30px 15px
section#form
  background-color: transparent
.arr_top
  position: relative
  &:after
    display: block
    position: absolute
    content ''
    width: 56px
    height: 56px
    border-radius 50%
    top: -30px
    left 50%
    background: #fff url(/img/svg/arr-d.svg) no-repeat 50%
    background-size: 25%
    transform translateX(-50%)
  &.border
    &:before
      display: block
      position: absolute
      content ''
      width: 62px
      height: 62px
      border-radius 50%
      top: -32px
      left 50%
      transform translateX(-50%) rotate(-45deg)
      border 3px solid accent-color
      border-top-color transparent
      border-right-color transparent


.section-title
  padding: 20px
  font:33px NeoSansProBold, Tahoma, Arial, sans-serif
  text-transform: uppercase
